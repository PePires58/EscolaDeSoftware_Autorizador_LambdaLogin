{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./built",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "references": [],
  "exclude": [
    "./node_modules",
    "./tests/*"
  ],
  "include": [
    "./*",
    "./node_modules/jsonwebtoken"
  ],
}
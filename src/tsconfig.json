{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./built",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./*",
    "./node_modules/escoladesoftware-autorizador-package-ts/lib/*"
  ],
  "exclude": [
    "/node_modules(?!\/escoladesoftware-autorizador-package-ts)/",
    "./tests/*"
  ]
}
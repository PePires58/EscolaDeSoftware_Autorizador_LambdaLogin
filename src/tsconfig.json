{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./built",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules",
    "./tests/*"
  ]
}